<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.currentcolor.CurrentColorFragment" >

    <FrameLayout
        android:id="@+id/color_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@android:color/black"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@id/button_change_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <View
            android:id="@+id/color_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#0088ff" />

    </FrameLayout>

    <Button
        android:id="@+id/button_change_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/purple_500"
        android:text="@string/change_color"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/button_ask_permission"
        app:layout_constraintEnd_toEndOf="@id/color_container"
        app:layout_constraintStart_toStartOf="@id/color_container"
        app:layout_constraintTop_toBottomOf="@id/color_container" />

    <Button
        android:id="@+id/button_ask_permission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/request_permissions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/color_container"
        app:layout_constraintStart_toStartOf="@id/color_container"
        app:layout_constraintTop_toBottomOf="@id/button_change_color" />

    <include layout="@layout/part_result" />


</androidx.constraintlayout.widget.ConstraintLayout>