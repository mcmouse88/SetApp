<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp" >

    <Button
        android:id="@+id/btn_success_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emulate_successful_sign_in" />

    <Button
        android:id="@+id/btn_cancelled_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emulate_cancelled_sign_in" />

    <Button
        android:id="@+id/btn_error_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emulate_error_sign_in" />

</LinearLayout>