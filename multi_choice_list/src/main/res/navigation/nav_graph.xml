<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navCatsListFragment">
    <fragment
        android:id="@+id/navCatsListFragment"
        android:name="com.mcmouse88.multi_choice_list.presentation.list.CatsListFragment"
        android:label="@string/cats_title"
        tools:layout="@layout/fragment_cats" >

        <action
            android:id="@+id/action_navCatsListFragment_to_navCatDetailsFragment"
            app:destination="@id/navCatDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/navCatDetailsFragment"
        android:name="com.mcmouse88.multi_choice_list.presentation.detail.CatDetailsFragment"
        android:label="@string/cat_details_title"
        tools:layout="@layout/fragment_cat_details" >
        <argument
            android:name="catId"
            app:argType="long" />
    </fragment>

</navigation>